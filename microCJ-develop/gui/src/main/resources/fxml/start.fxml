<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.StartController">
   <children>
      <Label text="microCJ" />
      <Button fx:id="b3d" mnemonicParsing="false" onAction="#handleButtonAction" text="3D simulation" />
      <Button fx:id="b2d" mnemonicParsing="false" onAction="#handleButtonAction" text="2D simulation" />
      <Button fx:id="bSettings" mnemonicParsing="false" onAction="#handleButtonAction" text="Settings" />
      <Label text="Settings to use:" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="tfSettings" text="user" />
            <Label text=".xml" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Text fx:id="tAbout" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
